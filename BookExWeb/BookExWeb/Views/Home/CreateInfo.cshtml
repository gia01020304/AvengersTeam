@model BookExWeb.Models.UserInfoModel

@{
    ViewBag.Title = "CreateInfo";
}

<h2>User Information</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="col-md-12">
    <div class="well well-sm">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Your Name</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Enter your full name" })
                    </div>
                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Phone Number</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-phone"></span>
                        </span>
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Enter your phone number" })
                    </div>
                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Email</label>
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-envelope"></span>
                        </span>
                        @Html.TextBoxFor(m => m.name, new { @class = "form-control", @placeholder = "Enter your email" })
                    </div>
                    @Html.ValidationMessageFor(m => m.name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-primary pull-right" />
            </div>
        </div>
    </div>
</div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
